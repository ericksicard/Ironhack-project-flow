<div id="page-contents">
    	<div class="container">
        <div class="row">
          <!-- Newsfeed Common Side Bar Left
          ================================================= -->
    			<div class="col-md-3 static">
            <ul class="nav-news-feed">
              <li><i class="icon ion-ios-people"></i><div><a href="/profile">Profile</a></div></li>
              <li><i class="icon ion-ios-people-outline"></i><div><a href="/timeline">Timeline</a></div></li>
              <li><i class="icon ion-ios-paper"></i><div><a href="/news">News</a></div></li>
              
            </ul><!--news-feed links ends-->
            <div id="chat-block">
              <!--chat online div was here -->
            </div><!--chat block ends-->
          </div>
    			<div class="col-md-9">
            <div class="row">
              <div class="col-md-7 col-sm-7">
                <div class="search-container">
                  <form action="news" method="GET">
                    <input type="text" name="news" class="form-control" placeholder="Search News">
                    <button type="submit" class="btn-primary">Search</button>                  
                  </form>
                </div>
              </div>
            </div>
            <!-- Post Content
            ================================================= -->
            {{#each feed}}
              {{#if this.image.url}}
              <div class="post-content">
                <div class="post-container">
                  <img src="{{this.image.thumbnail}}" alt="user" class="profile-photo-md pull-left" />
                  <div class="post-detail">
                    <div class="user-info">
                      <h5><a href="timeline.html" class="profile-link">{{this.provider.name}}</a></h5>
                      <p class="text-muted">Date: {{this.datePublished}}</p> <!-- when post was rendered -->
                    </div>
                    <div class="reaction">
                      <a class="anchor-link">Share</a>
                      <a class="btn text-green"><i class="icon ion-thumbsup"></i> 39</a>
                      <a class="btn text-red"><i class="fa fa-thumbs-down"></i> 2</a>
                    </div>
                  </div>
                    <div class="line-divider"></div>
                  <div class="post-content">
                      <div class="row">
                        <div class="col-md-5 col-sm-5">
                          <img class="img-responsive" src="{{this.image.url}}"/>
                        </div>
                        <div class="col-md-7 col-sm-7">
                          <a class="profile-link" href={{this.url}} >{{{this.title}}}</a>
                          <br>
                          <br>
                          <p>
                            {{{this.body}}}
                          </p> <!-- NEED TO SHORTEN TEXT TO SHOW SNIPPET OF NEWS SO IT DOESN'T THROW OFF THE FORMAT -->
                        </div>
                      </div>
                  </div>
                  <div class="line-divider"></div>
                  <div class="post-detail no-margin">
                    <div class="post-comment">
                        <img src="../images/michaela.jpeg" alt="" class="profile-photo-sm" />
                        <input type="text" class="form-control" placeholder="Comment">
                        <button class="btn-primary post-comment-button">Post</button>
                    </div>
                    <div>
                        <div class="post-comment">
                          <img src="../images/gustavo.jpeg" alt="" class="profile-photo-sm" />
                          <p class="no-margin">
                            <a href="timeline.html" class="profile-link">Gustavo </a>
                            <i class="em em-laughing"></i> 
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.
                          </p>
                        </div>
                        <div class="post-comment-action">
                          <a class="anchor-button">Reply</a>
                          <a class="anchor-button">Delete</a>
                          <a class="anchor-button">Edit</a>
                        </div>
                        <div class="post-comment-action">
                          <div class="post-comment">
                            <img src="../images/michaela.jpeg" alt="" class="profile-photo-sm" />
                            <input type="text" class="form-control" placeholder="Comment">
                            <button class="btn-primary post-comment-button">Post</button>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
              {{/if}}
            {{/each}}
    		</div>
    	</div>
