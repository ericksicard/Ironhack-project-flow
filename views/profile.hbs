<div id="page-contents">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-7">

      <!-- Post Create Box
              ================================================= -->
      <div class="create-post">
        <form action="/createPost" method="POST">
          <div class="row">
            <div class="col-md-9 col-sm-9">
              <div class="form-group">
                <img src="{{user.photo}}" alt="" class="profile-photo-md" />
                <textarea name="text" id="exampleTextarea" cols="30" rows="3" class="form-control"
                  placeholder="What's going on?"></textarea>
              </div>
            </div>
            <div class="col-md-3 col-sm-3">
              <div class="tools">
                <ul class="publishing-tools list-inline">
                  <li><a href="#"><i class="ion-images"></i></a></li>
                </ul>
                <button type="submit" class="btn btn-primary">Post</button> <!-- Link to method to post-->
              </div>
            </div>
          </div>
        </form>
      </div><!-- Post Create Box End-->

      <!-- Post Content
              ================================================= -->

      <div class="post-content">
        {{#if noPost}}
        <h3> There are no Post to display at this time. Be the first to create a new post! </h3>
        {{else}}
        {{#each posts}}
        <!--Post Date-->
        <div class="post-date hidden-xs hidden-sm">
          <h5>{{user.firstName}}</h5>
          <p class="text-grey"> {{#formatTime  this.createdAt "MMM Do YY"}}{{/formatTime}}</p>
        </div>
        <!--Post Date End-->


        <img src={{this.image}} class="img-responsive post-image" />
        <div class="post-container">
          <img src={{this.author.photo}} alt="user" class="profile-photo-md pull-left" />
          <div class="post-detail">
            <div class="user-info">

              <h5><a href="profile/{{this.author._id}}" class="profile-link">{{this.author.firstName}}
                  {{this.author.lastName}}</a></h5>
              <p class="text-muted">{{#relativeTime this.createdAt}} {{/relativeTime}}</p>
              <!-- Needs to reflect the time since post-->
            </div>
            <div class="reaction">

              <form action="/updateLikes/{{this._id}}" method="POST">
                <button type="submit" class="btn text-green"><i class="icon ion-thumbsup"></i>
                  {{#if this.likes.length }}
                  {{this.likes.length }}
                  {{else }}
                  0
                  {{/if}}</button>
              </form>
              <!-- Needs to reflect the number of likes    DONE-->
              {{!-- <a class="btn text-red"><i class="fa fa-thumbs-down"></i> 0</a> --}}
              <!-- Needs to reflect the number of dislikes-->
            </div>
            <div class="line-divider"></div>
            <div class="post-text">
              <p>{{this.text}}<i class="em em-anguished"></i> <i class="em em-anguished"></i> <i
                  class="em em-anguished"></i></p>
            </div>

            {{#if this.isOwner}}
            <form action="/deletePost/{{this._id}}" method="POST"><button class="btn-primary post-comment-button">Delete
                Post</button></form>
            {{!-- <form action="/deletePost/{{this.post._id}}" method="POST"><button type="submit"
                    class="btn-primary post-comment-button">Edit</button></form> --}}

            {{/if }}
            <br>
            <div class="line-divider"></div>
            <div class="post-comment">
              <!-- comment create start-->
              <img src={{req.user.photo}} alt="" class="profile-photo-sm" />
              <form action="/createComment/{{this._id}}" method="POST">
                <input name="comment" type="text" class="form-control" placeholder="Comment">
                <button type="submit" class="btn-primary post-comment-button">Create Comment</button>
              </form>
            </div><!-- comments create end-->
            <div>
              <!-- comments text start-->
              <div class="post-comment">
                {{#if this.noComments}}
                {{else}}
                {{#each this.comments}}

                <img src={{this.author.photo}} alt="user-comment" class="profile-photo-sm" />
                <p class="no-margin">
                  <a href="/profile/{{this.author._id}}" class="profile-link">{{this.author.firstName}} </a>
                  <i class="em em-laughing"></i>
                  {{this._doc.comment}}
                </p>
              </div>
              <div class="post-comment-action">
                {{#if this.isOwner}}
                <form action="/deleteComment/{{this._doc._id}}/{{../this._id}}" method="POST"><button
                    class="anchor-button">Delete comment</button>
                </form>

                {{/if}}

                <br>
              </div>
              <div class="post-comment-action">
                <br>
                <!--Reply  Start============= -->
                <div class="post-comment">
                  <img src={{req.user.photo}} alt="" class="profile-photo-sm" />
                  <form action="/createReply/{{this._doc._id}}" method="POST">
                    <input name="reply" type="text" class="form-control" placeholder="Replies">
                    <button class="btn-primary post-comment-button">Reply</button>
                  </form>
                  <!--Reply create end============= -->
                  <!--Reply text Start============= -->
                  {{#if this._doc.replies}}
                  {{#each this._doc.replies}}
                  <img src={{this.author.photo}} alt="" class="profile-photo-sm" />
                  <p class="no-margin">
                    <a href="/profile/{{this.author._id}}" class="profile-link">{{this.author.firstName}} </a>
                    <i class="em em-laughing"></i>
                    {{this.reply}}
                  </p>

                  {{#compare this.author.email "===" user.email }}
                  <form action="/deleteReply/{{this._id}}/{{../this._doc._id}}" method="POST"><button
                      class="anchor-button">Delete Reply</button></form>
                  {{else}}
                  <h1> </h1>
                  {{/compare}}

                  {{/each}}
                  {{/if}}
                </div>

              </div>
              <!--Reply end============= -->


              {{/each}}
              {{/if}}
            </div><!-- comments text end-->
          </div>
        </div>
        {{/each}}
        {{/if}}
      </div><!-- Post Content end================================== -->
    </div><!-- div class col-md-7 end====================================== -->
  </div><!-- div class row end====================================== -->
</div><!-- div class id page-contents end================================ -->
